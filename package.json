{
  "name": "exogress",
  "version": "0.1.0",
  "description": "Exogress client for node.js",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/exogress/exogress-node.git"
  },
  "files": [
    "native/index.node",
    "lib"
  ],
  "author": "Exogress Team <team@exogress.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.17.1",
    "neon-cli": "^0.4.0",
    "node-pre-gyp": "amilajack/node-pre-gyp#neon-compat",
    "node-pre-gyp-github": "^1.4.3"
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build=false || neon build --release",
    "package": "node-pre-gyp package",
    "upload-binary": "node-pre-gyp package && node-pre-gyp-github publish"
  },
  "binary": {
    "module_name": "index",
    "host": "https://github.com/exogress/exogress-node/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  }
}
